{
  "tasks": {
    "start": "deno run -A --watch=static/,routes/,assets/scss/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
	"files": {
	  "include": ["routes/", "components/", "islands/"]
	},
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["routes/", "components/", "islands/"]
    },
    "options": {
      "useTabs": true,
      "indentWidth": 4,
      "semiColons": false,
      "singleQuote": true
    }
  }
}
